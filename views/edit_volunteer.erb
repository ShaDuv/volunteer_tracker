<h1>Update <%=@volunteer.name() %></h1>

<form action="/projects/<%=@project.id%>/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Change Volunteer</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update Volunteer</button>
</form>
<p><a href="/volunteers">Return to volunteer list</a></p>
